<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/showrel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">
    <RelativeLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/mem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"/>
        <TextView
            android:id="@+id/mem_email"
            android:layout_below="@id/mem_name"
             android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Email"
         android:textSize="24sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/s_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            app:civ_circle_background_color="@android:color/holo_green_dark"
            android:src="@drawable/baseline_done_white_18dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
        <View
            android:layout_below="@id/showrel"
        android:background="#000"
        android:minHeight="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2dp"
            />

</RelativeLayout>